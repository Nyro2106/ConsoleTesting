<Window x:Class="WPFTesting.CryptoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTesting"
        mc:Ignorable="d"
        Title="Crypto" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="UxTextToEncryptTextBox" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Margin="190,115,256,0"/>
        <Button x:Name="UxEncryptButton" Content="Verschlüsseln" HorizontalAlignment="Left" Margin="574,113,0,0" VerticalAlignment="Top" Width="75" Click="UxEncryptButton_Click"/>
        <Label Content="Zu verschlüsselnder Text" HorizontalAlignment="Left" Margin="190,84,0,0" VerticalAlignment="Top"/>
        <Button x:Name="UxDecryptButton" Content="Entschlüsseln" HorizontalAlignment="Left" Margin="574,235,0,0" VerticalAlignment="Top" Width="75" Click="UxDecryptButton_Click"/>
        <Label Content="Entschlüsselter Text" HorizontalAlignment="Left" Margin="190,206,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="UxDecryptedTextTextBox" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Margin="190,237,256,0"/>
        <ListBox HorizontalAlignment="Left" Height="206" Margin="24,115,0,0" VerticalAlignment="Top" Width="128"/>
    </Grid>
</Window>
